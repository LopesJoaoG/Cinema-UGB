@model IEnumerable<Cinema.Models.Filme>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Criar um novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duracao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdadeIndicativa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duracao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdadeIndicativa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FilmeId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.FilmeId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.FilmeId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
