@model IEnumerable<Cinema.Models.Sala>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Criar um novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SalaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poltrona)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SalaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poltrona)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SalaId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.SalaId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.SalaId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
