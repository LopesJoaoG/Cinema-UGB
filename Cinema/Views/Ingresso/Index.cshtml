@model IEnumerable<Cinema.Models.Ingresso>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Criar um novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IngressoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sessao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IngressoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sessao.Numero)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IngressoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IngressoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IngressoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
